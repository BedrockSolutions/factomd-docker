{
  "name": "factomd-docker",
  "description": "Cloud native factomd docker image",
  "repository": "https://github.com/BedrockSolutions/factomd-docker",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "build": "docker build -t factomd:latest -t bedrocksolutions/factomd:latest .",
    "exec": "docker run -v $(pwd)/testing/values:/app/values bedrocksolutions/factomd:latest",
    "shell": "docker run -it -v $(pwd)/testing/values:/app/values bedrocksolutions/factomd:latest shell",
    "push": "docker push bedrocksolutions/factomd:latest"
  },
  "dependencies": {
    "lodash": "^4.17.11"
  }
}
