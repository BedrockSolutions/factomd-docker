{
  "name": "factomd-docker",
  "version": "0.1.0",
  "description": "Bedrock Solutions cloud native factomd docker image",
  "license": "GPL-3.0-or-later",
  "repository": "https://github.com/BedrockSolutions/factomd-docker",
  "scripts": {
    "build": "docker build --build-arg FACTOMD_VERSION=6.3.1 -t factomd:latest -t bedrocksolutions/factomd:latest .",
    "build:mainnet": "docker build --build-arg FACTOMD_VERSION=6.3.1 -t factomd:mainnet -t bedrocksolutions/factomd:mainnet .",
    "build:testnet": "docker build --build-arg FACTOMD_VERSION=6.3.1-rc1 -t factomd:testnet -t bedrocksolutions/factomd:testnet .",
    "push": "docker push bedrocksolutions/factomd:latest",
    "push:mainnet": "docker push bedrocksolutions/factomd:mainnet",
    "push:testnet": "docker push bedrocksolutions/factomd:testnet",
    "shell": "docker run -it -v $(pwd)/testing/values:/app/config -v $(pwd)/testing/database:/app/database bedrocksolutions/factomd:latest shell",
    "start": "docker run -v $(pwd)/testing/values:/app/config -v $(pwd)/testing/database:/app/database bedrocksolutions/factomd:latest",
    "test": "ava",
    "test:build": "npm run build && npm test",
    "config": "docker run -it -v $(pwd)/testing/values:/app/config -v $(pwd)/testing/database:/app/database bedrocksolutions/factomd:latest config"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "ms": "^2.1.1"
  },
  "devDependencies": {
    "ava": "^1.4.1",
    "ini": "^1.3.5",
    "js-yaml": "^3.13.1",
    "pify": "^4.0.1",
    "rimraf": "^2.6.3"
  },
  "ava": {
    "concurrency": 5,
    "failFast": false,
    "files": [
      "test/**/*",
      "!test/util.js"
    ],
    "helpers": [
      "test/util.js"
    ]
  }
}
